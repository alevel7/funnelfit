{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      "templates/**/*"
    ],
    "deleteOutDir": true,
    "builder":"swc"
  },
  "swcOptions": {
    "jsc": {
      "target": "es2021",
      "parser": {
        "syntax": "typescript",
        "tsx": false,
        "decorators": true
      },
      "transform": {
        "decoratorMetadata": true,
        "legacyDecorator": true
      }
    },
    "module": {
      "type": "commonjs"
    }
  }
}
